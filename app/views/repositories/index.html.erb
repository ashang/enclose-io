<% if params[:mine] %>
  <h4 class="pull-left">My Repositories</h4>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Latest Version</th>
      <% if params[:mine] %>
        <th>Operation</th>
      <% else %>
        <th>Executables</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @repositories.each do |x| %>
    <tr>
      <th scope="row"><a href="<%= repository_path x %>"><%= x.name %></a></th>
      <td><%= x.latest_version %></td>
      <td>
      <% if params[:mine] %>
        <a href="<%= repository_path(x) %>" data-method="delete"><button type="button" class="btn btn-danger btn-sm" data-confirm="Are you sure?">Delete</button></a>
      <% else %>
        <%= x.executables.count(:id) %>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
