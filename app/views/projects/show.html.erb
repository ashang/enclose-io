<div class="pull-left">
  <h4><%= @project.name %></h4>
  <p><a href="<%= @project.source_url %>"><%= @project.source_url %></a></p>
</div>

<p class="pull-right">
  <a class="btn btn-secondary" href="<%= project_packages_path(@project) %>" data-method="post" role="button"><i class="fa fa-refresh" aria-hidden="true"></i> Check Releases</a>
  <a class="btn btn-danger" href="<%= project_path @project %>" data-method="delete" data-confirm="Are you sure?" role="button">Delete</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>File Name</th>
      <th>Packed at</th>
      <th>Size</th>
    </tr>
  </thead>
  <tbody>
    <% @project.packages.order('version DESC, name ASC, kind ASC').each do |x| %>
      <% if x.doing? %>
        <tr class="doing">
          <th scope="row"><%= file_item x %></th>
          <td>Packing...</td>
          <td>Packing...</td>
        </tr>
      <% elsif x.done? %>
        <tr class="done">
          <th scope="row"><a href="<%= project_package @project, x %>"><%= file_item x %></a></th>
          <td><%= x.done_at %></td>
          <td><%= number_to_human_size x.size %></td>
        </tr>
      <% else; raise 'noop' %>
      <% end %>
    <% end %>
  </tbody>
</table>
